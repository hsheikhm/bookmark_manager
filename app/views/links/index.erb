<h1> Links </h1>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL:   <%= link.url   %>
      Tags: <% link.tags.each do |tag| %>
        <%= tag.tag %>
        <% end %>
    </li>
  <% end %>
</ul>


<form action="/links/new">
  Add a bookmark:   <input type="submit" value="Add Link">
</form>


<form action="/tags/filter">
  Filter: <input type="text" name="filter">
  <input type="submit" value="Submit">
</form>
